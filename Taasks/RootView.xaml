<UserControl
    x:Class="Taasks.RootView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Taasks"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    MinWidth="800"
    MinHeight="600"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="#222">
        <Border
            Background="#222"
            BorderBrush="#222"
            BorderThickness="5">
            <Border
                Background="#222"
                BorderBrush="GhostWhite"
                BorderThickness="2"
                CornerRadius="10">
                <TextBlock x:Name="Time" Foreground="GhostWhite"></TextBlock>
            </Border>
        </Border>
    </Grid>
</UserControl>
